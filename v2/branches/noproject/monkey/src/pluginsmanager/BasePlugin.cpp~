#include "BasePlugin.h"

bool BasePlugin::setEnabled( bool b )
{
	if ( b != mPluginInfos.Enabled)
		return;
	
	if ( b )
	{
		mPluginInfos.Enabled = true;
	}
	else
	{
		mPluginInfos.Enabled = false;
	}
	// return default value
	return true;
}

BasePlubin::~BasePlugin()
{
	if ( isEnabled() )
		setEnabled( false );
}